@model IEnumerable<MenuItem>

@if(Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">
        <div class="row">
            <h3 style="color:#ea682d;">@Model.FirstOrDefault().Category.Name</h3>
        </div>
        @foreach(var menuItem in Model)
        {
            <div class="border rounded col-12 mb-3 mt-3 px-2 py-2">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@menuItem.Image" class="img-fluid" style="border-radius: 5px;
        border: 1px solid #bbb9b9;"/>
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-danger" style="font-size:21px;">@menuItem.Name</label>
                                @if (menuItem.Spicyness == "1")
                                {
                                    <img src="~/images/mild.png" title="Mild" />
                                }
                                @if (menuItem.Spicyness == "2")
                                {
                                    <img src="~/images/spicy.png" title="Spicy" />
                                }
                                @if (menuItem.Spicyness == "3")
                                {
                                    <img src="~/images/verySpicy.png" title="VerySpicy" />
                                }
                            </div>
                            <div class="col-4 text-right text-success">
                                <h4>@(menuItem.Price) LE</h4>
                            </div>
                        </div>

                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(menuItem.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@menuItem.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}